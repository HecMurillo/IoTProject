<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hasher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
    </style>
    
    <style name="background" parent="Theme.Hasher">
        <item name="backgroundColor">@color/black</item>

    </style>

    <style name="navigatteButton" parent="Theme.Hasher">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="listButton" parent="Theme.Hasher">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title" parent="Theme.Hasher">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="text" parent="Theme.Hasher">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>